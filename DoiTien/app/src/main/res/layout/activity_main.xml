<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7391FF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/white_container"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="@drawable/layout_border"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/icons8_united_states_48"
                android:gravity="center"
                android:text=" USD:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/USD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập số tiền"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/icons8_vietnam_48"
                android:gravity="center_vertical"
                android:text="VND:"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/VND"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập số tiền"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/button_1"
        android:text="CONVERT"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/white_container"
        app:layout_constraintEnd_toEndOf="@id/white_container"
        app:layout_constraintStart_toStartOf="@id/white_container"
        app:layout_constraintTop_toBottomOf="@id/white_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
