<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="202dp"
        android:background="@drawable/bgb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_removebg_preview__19_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.686" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/side_image"
        android:layout_width="133dp"
        android:layout_height="420dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:src="@drawable/image_removebg_preview__20_"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dtb"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/button"
        android:text="Tính Điểm Trung Bình"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ds"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/button"
        android:text="Danh Sách Môn Học"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hd"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/button"
        android:text="Hoạt Động Trường"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ab"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/button"
        android:text="About Me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
